<UserControl x:Class="Pilana123.KreiranjeF"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="16"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pilana123"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="1000" IsVisibleChanged="UserControl_IsVisibleChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Grid.Row="1" BorderBrush="White"  BorderThickness="1,1,1,1"  Background="Transparent" Margin="100,55,100,5"></Border>
        <Label Content="Informacije o izdavaocu" FontWeight="Bold" Grid.Row="1" Grid.Column="3" Margin="20,20,120,-25" Foreground="White" Background="#007070" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Label>
        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Grid.Row="2" BorderBrush="White"  BorderThickness="1,1,1,1"  Background="Transparent" Margin="100,70,100,-10"></Border>
        <Label Content="Informacije o primaocu" FontWeight="Bold" Grid.Row="2" Grid.Column="3" Margin="25,0,120,-77" Foreground="White" Background="#007070" VerticalAlignment="Center" HorizontalContentAlignment="Center" Padding="4,0"></Label>
        <Border Grid.ColumnSpan="3" Grid.RowSpan="2" Grid.Row="3" BorderBrush="White"  BorderThickness="1,1,1,1"  Background="Transparent" Margin="100,85,100,-130"></Border>
        <Label Content="Informacije o robi" FontWeight="Bold" Grid.Row="3" Grid.Column="3" Margin="65,-9,120,-115" Foreground="White" Background="#007070" VerticalAlignment="Center" HorizontalContentAlignment="Center" Padding="4,0"></Label>

        <TextBox x:Name="RedniBrojRacuna" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 6.&#x0a;Moguce je uneti znakove . i /" materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Row="0" Grid.Column="0" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Redni broj računa:" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" PreviewKeyDown="RedniBrojRacuna_PreviewKeyDown" MaxLength="6" FontWeight="Bold" HorizontalAlignment="Right" LostFocus="RedniBrojRacuna_LostFocus"/>

        <TextBox x:Name="NazivIzdavaoca" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 30.&#x0a;Moguce je uneti do 3 razmaka, kao i znakove '.-" materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Row="2" Grid.Column="0" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Naziv izdavaoca:" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" LostFocus="NazivIzdavaoca_LostFocus" MaxLength="30" FontWeight="Bold" PreviewKeyDown="NazivIzdavaoca_PreviewKeyDown" HorizontalAlignment="Right" Margin="0,-15,0,0" Padding="0"/>

        <TextBox x:Name="AdresaIzdavaoca" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 40. &#x0a; Moguće je koristiti slova,brojeve i znakove / i ," materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Row="2" Grid.Column="1" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Adresa izdavaoca(Ulica i broj,mesto):" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" LostFocus="AdresaIzdavaoca_LostFocus" PreviewKeyDown="AdresaIzdavaoca_PreviewKeyDown" MaxLength="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-15,0,0" />

        <TextBox x:Name="PIBIzdavaoca" ToolTip="Polje ne sme da bude prazno! &#x0a;Polje mora da sadrži tačno 9 karaktera i označava porezno identifikacioni broj izdavaoca." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Row="2" Grid.Column="2" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="PIB izdavaoca:" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" PreviewKeyDown="PIBIzdavaoca_PreviewKeyDown" MaxLength="9" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,-15,0,0" LostFocus="PIBIzdavaoca_LostFocus"/>

        <TextBox x:Name="MestoIzdavanja" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 20. &#x0a; Moguće je uneti do 2 razmaka." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Row="1" Grid.Column="1" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Mesto izdavanja:" Text="{Binding Content}" VerticalAlignment="Top" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" LostFocus="MestoIzdavanja_LostFocus" PreviewKeyDown="MestoIzdavanja_PreviewKeyDown" MaxLength="20" FontWeight="Bold" Margin="0,-8,0,0"/>

        <DatePicker materialDesign:HintAssist.IsFloating="True" ToolTip="Polje ne sme da bude prazno! &#x0a;Potrebno je selektovati željeni datum u kalendaru. &#x0a;Kalendar se otvara pritiskom na ikonicu kalendara.&#x0a;Vrednosti u polju moguće je izbrisati ali ne i menjati." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" x:Name="DatumIzdavanja" Grid.Row="1" materialDesign:ThemeAssist.Theme="Light" Grid.Column="0" Width="200" materialDesign:HintAssist.Hint="Datum izdavanja:" Text="{Binding Content}" VerticalAlignment="Top" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="White" FirstDayOfWeek="Monday" Margin="0" OpacityMask="White" PreviewKeyDown="DatumIzdavanja_PreviewKeyDown" FontWeight="Bold" HorizontalAlignment="Right" LostFocus="DatumIzdavanja_LostFocus"/>

        <Label x:Name="labelaime" Grid.Row="3" Grid.Column="0" Content="Ime i prezime primaoca:" FontSize="14" Foreground="Black" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,-1,43,0" FontWeight="Bold"/>
        <ComboBox IsEditable="True" ToolTip="Polje ne sme da bude prazno! &#x0a;Potrebno je selektovati ime i prezime klijenta iz ponudjene liste. &#x0a;U listi se nalaze samo klijenti koji su prethodno dodati u tabelu klijenata. &#x0a;Vrednosti u polju moguće je izbrisati ali ne i menjati." x:Name="ImePrezime"  materialDesign:HintAssist.HintOpacity="0.9" materialDesign:ThemeAssist.Theme="Light" Background="#007070" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" Grid.Row="3" Grid.Column="0" Width="200"  materialDesign:HintAssist.Hint="Ime i prezime primaoca:" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="Black" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" PreviewKeyDown="ImePrezime_PreviewKeyDown" FontWeight="Bold" DropDownClosed="ImePrezime_DropDownClosed" Margin="0,40,0,0" LayoutUpdated="ImePrezime_LayoutUpdated" HorizontalAlignment="Right" Padding="0,0,0,4" GotFocus="ImePrezime_GotFocus" LostFocus="ImePrezime_LostFocus"/>

        <Label x:Name="labelaadresa" Grid.Row="3" Grid.Column="1" Content="Adresa primaoca:" FontSize="14" Foreground="Black" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-1,88,0" FontWeight="Bold"/>
        <ComboBox IsEditable="True" x:Name="AdresaPrimaoca" ToolTip="Polje ne sme da bude prazno! &#x0a;Potrebno je prethodno selektovati ime i prezime klijenta, kako bi ste bili u mogućnosti selektovati adresu klijenta iz liste adresa.&#x0a;Vrednosti u polju moguće je izbrisati ali ne i menjati." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:ThemeAssist.Theme="Light" Background="#007070" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" Grid.Row="3" Grid.Column="1" Width="200" materialDesign:HintAssist.Hint="Adresa primaoca(Ulica i broj,mesto):" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="Black" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" PreviewKeyDown="AdresaPrimaoca_PreviewKeyDown" FontWeight="Bold" DropDownClosed="AdresaPrimaoca_DropDownClosed" Margin="0,40,0,0" LayoutUpdated="AdresaPrimaoca_LayoutUpdated" Padding="0,0,0,4" GotFocus="AdresaPrimaoca_GotFocus" LostFocus="AdresaPrimaoca_LostFocus"/>

        <TextBox x:Name="PIBPrimaoca" ToolTip="Polje ne sme da bude prazno! &#x0a;Polje se automatski popunjava nakon što prvo izabarete ime i prezime primaoca, a zatim i adresu primaoca. &#x0a;Polje mora da sadrži tačno 9 karaktera i označava porezno identifikacioni broj izabranog primaoca. &#x0a;Vrednosti u polju moguće je izbrisati ali ne i menjati." Grid.Row="3" materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Column="2" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="PIB primaoca:" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" PreviewKeyDown="PIBPrimaoca_PreviewKeyDown" MaxLength="9" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,-16" LostFocus="PIBPrimaoca_LostFocus"/>

        <CheckBox x:Name="ClassicModeCheckBox" IsThreeState="False" IsChecked="True" Margin="0 8 0 0" Visibility="Hidden"/>

        <Label x:Name="labelavrstadobara" Grid.Row="4" Grid.Column="0" Content="Vrsta dobara/usluge:" FontSize="14" Foreground="Black" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,-18,63,-45" FontWeight="Bold"/>
        <ComboBox IsEditable="True" x:Name="VrstaDobaraUsluge" ToolTip="Polje ne sme da bude prazno! &#x0a;Potrebno je selektovati željenu vrstu dobara ili uslugu iz ponuđene liste.&#x0a;Vrednosti u polju moguće je izbrisati ali ne i menjati." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:ThemeAssist.Theme="Light" Background="#007070" materialDesign:HintAssist.Hint="Vrsta dobara/usluge:" Foreground="Black" materialDesign:HintAssist.Foreground="Black" materialDesign:TextFieldAssist.UnderlineBrush="White" Grid.Column="0" Grid.Row="4" Width="200" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" Margin="0,0,0,-15" FontWeight="Bold" PreviewKeyDown="VrstaDobaraUsluge_PreviewKeyDown" LayoutUpdated="VrstaDobaraUsluge_LayoutUpdated" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="0,0,0,4" GotFocus="VrstaDobaraUsluge_GotFocus" LostFocus="VrstaDobaraUsluge_LostFocus" >
            <ComboBoxItem Content="Hrast"  BorderBrush="#FF164283" Foreground="Black"/>
            <ComboBoxItem Content="Jasen"  BorderBrush="#FF164283" Foreground="Black"/>
            <ComboBoxItem Content="Bukva"  BorderBrush="#FF164283" Foreground="Black"/>
            <ComboBoxItem Content="Tresnja"  BorderBrush="#FF164283" Foreground="Black"/>
            <ComboBoxItem Content="Bagrem"  BorderBrush="#FF164283" Foreground="Black"/>
            <ComboBoxItem Content="Prerada drvnih sortimenata"  BorderBrush="#FF164283" Foreground="Black"/>
        </ComboBox>

        <TextBox x:Name="KolicinaRobe" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 5. &#x0a;Moguće je koristiti decimalan zarez." Grid.Row="4" materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Column="1" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Količina robe(cm3):" Text="{Binding Content}" VerticalAlignment="Bottom" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" PreviewKeyDown="KolicinaRobe_PreviewKeyDown" MaxLength="5" FontWeight="Bold" Margin="0,0,0,-15" LostFocus="KolicinaRobe_LostFocus"/>

        <TextBox x:Name="VisinaAvansa" Grid.Row="5" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 7.Moguće je koristiti decimalni zarez." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Column="0" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Visina avansnih plaćanja:" Text="{Binding Content}" VerticalAlignment="Bottom" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" PreviewKeyDown="VisinaAvansa_PreviewKeyDown" MaxLength="7" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,0,-3" LostFocus="VisinaAvansa_LostFocus" />

        <TextBox x:Name="IznosOsnovice" Grid.Row="5" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 7.Moguće je koristiti decimalni zarez." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Column="1" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Iznos osnovice:" Text="{Binding Content}" VerticalAlignment="Bottom" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" PreviewKeyDown="IznosOsnovice_PreviewKeyDown" MaxLength="7" FontWeight="Bold" GotFocus="IznosOsnovice_GotFocus" LostFocus="IznosOsnovice_LostFocus" HorizontalAlignment="Center" Margin="0,0,0,-3"/>

        <TextBox x:Name="IznosPDV" Grid.Row="5" ToolTip="Polje ne sme da bude prazno! &#x0a;Maksimalan broj karaktera je 2, što znači da je najveća vrednost koja se može uneti 99.Nije moguće koristiti decimalni zarez." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Column="2" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Iznos PDV(%):" Text="{Binding Content}" VerticalAlignment="Bottom" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" PreviewKeyDown="IznosPDV_PreviewKeyDown" MaxLength="2" FontWeight="Bold" GotFocus="IznosPDV_GotFocus" LostFocus="IznosPDV_LostFocus" HorizontalAlignment="Left" Margin="0,0,0,-3"/>

        <TextBox x:Name="Ukupno" Grid.Row="6" ToolTip="Polje se automatski popunjava nakon što unesete određenu vrednost u polje iznos osnovice i iznos PDV. &#x0a;Vrednosti u polju nije moguće izbrisati kao ni menjati." materialDesign:HintAssist.HintOpacity="0.9" materialDesign:HintAssist.FloatingScale="0.88" Grid.Column="2" Width="200" Style="{StaticResource MaterialDesignFloatingHintTextBox}" materialDesign:HintAssist.Hint="Ukupno:" Text="{Binding Content}" VerticalAlignment="Center" materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White"  Foreground="Black" BorderBrush="Black" CaretBrush="White" MaxLength="7" FontWeight="Bold" PreviewKeyDown="Ukupno_PreviewKeyDown" HorizontalAlignment="Left" LostFocus="Ukupno_LostFocus"/>

        <DataGrid x:Name="Tabela5" ToolTip="Tabela stavki!" AlternatingRowBackground="DimGray" Grid.Row="7" Grid.ColumnSpan="3" Margin="130,50,130,10" FontSize="14" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" FontWeight="Bold" HorizontalAlignment="Center" VerticalGridLinesBrush="#FF757575" GridLinesVisibility="All"/>

        <Button Grid.Row="8" ToolTip="Klikom na dugme proverava se validnost polja od polja redni broj računa do polja pib primaoca. &#x0a;Ukoliko su sva polja ispravno popunjena i ukoliko u tabeli stavki postoji barem jedna stavka, faktura će biti kreirana. &#x0a;Ukoliko neko polje nije ispravno popunjeno, ono će biti označeno crvenom bojom." Grid.Column="1" x:Name="Kreiraj" Content="Kreiraj" Height="30" Padding="0,4" Background="#FF215913" FontSize="14" FontWeight="Bold" Foreground="White" MouseEnter="Kreiraj_MouseEnter" MouseLeave="Kreiraj_MouseLeave" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="5" Width="90" Click="Kreiraj_Click" Margin="0,-15,0,0"/>
        <Button Grid.Row="7" ToolTip="Klikom na dugme proverava se validnost polja od polja vrsta dobara/usluge do polja ukupno, kao i polje redni broj računa koje se zaključava nakon dodavanja. &#x0a;Ukoliko su sva polja ispravno popunjena, vrednosti će biti dodate u tabelu ispod, koja označava stavke fakture i koja mora sadržati barem jednu stavku kako bi faktura mogla biti kreirana. &#x0a;Ukoliko neko polje nije ispravno popunjeno, ono će biti označeno crvenom bojom." Grid.Column="1" x:Name="Dodaj" Content="Dodaj" Height="30" Padding="0,4" Background="#FF215913" FontSize="14" FontWeight="Bold" Foreground="White" MouseEnter="Dodaj_MouseEnter" MouseLeave="Dodaj_MouseLeave" BorderThickness="0" materialDesign:ButtonAssist.CornerRadius="5" Width="90" VerticalAlignment="Top" Margin="0,12.5,0,0" Click="Dodaj_Click"/>
    </Grid>

</UserControl>
